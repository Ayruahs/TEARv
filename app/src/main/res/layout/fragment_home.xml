<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rubble_home_background"
    android:theme="@style/FullscreenNoTitleTheme">

    <VideoView
        android:id="@+id/live_feed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/arrow_up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorAlert"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/arrow_down"
        android:layout_marginBottom="140dp"
        android:background="@drawable/arrow_up" />

    <Button
        android:id="@+id/arrow_down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorAlert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/arrow_down" />

    <Button
        android:id="@+id/arrow_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAlert"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/arrow_left" />

    <Button
        android:id="@+id/arrow_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorAlert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/arrow_right" />

    <Button
        android:id="@+id/arrow_up_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="0dp"
        android:background="#00FF0000"/>

    <Button
        android:id="@+id/arrow_down_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="0dp"
        android:background="#00FF0000"/>

    <Button
        android:id="@+id/arrow_down_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="120dp"
        android:background="#00FF0000"/>

    <Button
        android:id="@+id/arrow_up_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="120dp"
        android:background="#00FF0000"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Hello"
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/tempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Temp (C):"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tempValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tempLabel"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="-31dp"
        android:text="20"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/humidityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="12dp"
        android:text="Humidity:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/humidityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="30dp"
        android:text="67"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/record_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="65dp"
        android:textOn="STOP"
        android:textOff="REC"
        android:background="@drawable/record_button" />

    <ToggleButton
        android:id="@+id/light_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/lightbulb"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/rotate_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/colorAlert"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/arrow_right" />

    <Button
        android:id="@+id/return_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/colorAlert"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/return_home" />



    <Button
        android:id="@+id/rotate_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/colorAlert"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/arrow_left" />



</RelativeLayout>